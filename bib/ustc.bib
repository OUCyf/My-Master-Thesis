journal = {Geophysical Journal International},
keywords = {Computational seismology,Seismic tomography,Time-series analysis,Wave propagation},
number = {2},
pages = {1003--1011},
title = {{An Adaptable Seismic Data Format}},
volume = {207},
year = {2016}
