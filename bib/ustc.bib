pages = {4488--4502},
publisher = {John Wiley & Sons, Ltd},
title = {{An active ring fault detected at Tend{\"{u}}rek volcano by using InSAR}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/full/10.1002/jgrb.50305 https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/jgrb.50305 https://agupubs.onlinelibrary.wiley.com/doi/10.1002/jgrb.50305},
