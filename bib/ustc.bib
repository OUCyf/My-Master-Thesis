number = {6142},
pmid = {23846903},
publisher = {American Association for the Advancement of Science},
title = {{Injection-Induced Earthquakes}},
url = {https://science.sciencemag.org/content/341/6142/1225942 https://science.sciencemag.org/content/341/6142/1225942.abstract},
