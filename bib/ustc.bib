file = {:Users/yf/Library/Application Support/Mendeley Desktop/Downloaded/Zhu, Zhou - 2016 - Seismic moment tensor inversion using 3D velocity model and its application to the 2013 Lushan earthquake sequence.pdf:pdf},
issn = {14747065},
journal = {Physics and Chemistry of the Earth},
keywords = {2013 Lushan earthquake,3D Green's function,Seismic moment tensor inversion},
pages = {10--18},
publisher = {Elsevier Ltd},
title = {{Seismic moment tensor inversion using 3D velocity model and its application to the 2013 Lushan earthquake sequence}},
